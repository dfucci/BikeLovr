<div class="container">
<h1>List of Bikes</h1>
<div class="well">
<ul>
	<% @bikes.each do |b| %>
	<li>
  <%= link_to b.name, bike_path(b.id) %> <%= "- #{b.description} $#{b.price}, by" %> 
		 <%= link_to b.user.name, user_path(b.user) %>
	
	</li>
		<% end %>
</ul>
</div>


<% if !flash[:error].nil? %>
<div class="alert alert-error">
<button type="button" class="close" data-dismiss="alert">Ã—</button>
<strong><%= flash[:error] %></strong>
</div>
<% end %>
</div>
